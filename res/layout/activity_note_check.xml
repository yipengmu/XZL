<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="68dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="50dp"
    android:background="@drawable/back_huangli_wraper"
    android:padding="10dp" >

    <Button
        android:id="@+id/btn_close"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:background="@drawable/btn_close_huangli"
        android:onClick="onClick" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btn_close"
        android:layout_marginTop="10dp"
        android:background="@drawable/back_huangli_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="11dp"
            android:background="@drawable/back_huangli_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/note_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:src="@drawable/btn_home_note_edit" />

                <ImageView
                    android:id="@+id/note_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:onClick="onClick"
                    android:src="@drawable/btn_home_note_del" />
            </LinearLayout>

            <TextView
                android:id="@+id/note_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="默认数据"
                android:textColor="@color/dark_grey"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/note_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time默认数据"
                android:layout_marginTop="4dp"
                android:textColor="@color/calendar_txt"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系人:"
                    android:textColor="@color/calendar_txt"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/note_contact"
                    android:textColor="@color/calendar_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="默认数据"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/note_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="内容默认数据"
                android:layout_marginTop="6dp"
                android:textColor="@color/dark_grey"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                android:layout_marginTop="6dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp" 
                    android:text="通知："
                    android:textColor="@color/grey" />

                <TextView
                    android:id="@+id/note_alarm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="默认数据"
                    android:textColor="@color/grey"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>