<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout style="@style/header" >

        <Button
            android:id="@+id/btn_back"
            style="@style/header_back"
            android:onClick="onClick" />

        <Button
            android:id="@+id/btn_forward"
            style="@style/header_submit"
            android:onClick="onClick"
            android:text="注册" />

        <TextView
            android:id="@+id/txt_title"
            style="@style/header_title"
            android:text="登录" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/calendar_grid"
        android:orientation="vertical"
        android:padding="14dp" >

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@null"
            android:drawableBottom="@drawable/line_sigin_input"
            android:drawableLeft="@drawable/icon_email"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="邮箱/手机号码"
            android:inputType="textEmailAddress"
            android:textColorHint="#889729"
            android:textSize="18sp" >
        </EditText>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="6dp"
            android:background="@null"
            android:drawableBottom="@drawable/line_sigin_input"
            android:drawableLeft="@drawable/icon_passwd"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColorHint="#889729"
            android:textSize="18sp" >
        </EditText>

        <Button
            android:id="@+id/btn_forget_passwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="12dp"
            android:background="@null"
            android:onClick="onClick"
            android:text="忘记密码"
            android:textColor="#E6645B"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/btn_signin"
            android:onClick="onClick"
            android:text="登录"
            android:textColor="#889729"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_centerInParent="true"
                android:background="@drawable/line_sigin_dashed" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="or" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp" >

            <ImageView
                android:id="@+id/btn_signin_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_share_qq"
                android:onClick="onClick" />

            <ImageView
                android:id="@+id/btn_signin_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:src="@drawable/btn_share_weibo"
                android:onClick="onClick" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>