<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/dashikanfa_header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/black" >

        <ImageView
            android:id="@+id/backHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/btn_returnhome_white" />

        <TextView
            android:id="@+id/dashikafa_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/dashikanfa"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/TabSel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/dashikafa_title"
            android:src="@drawable/btn_sel" />

    </RelativeLayout>

    <ListView
        android:id="@+id/dashikafa_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/dashidetail_sel"
        android:divider="@color/divider_color"
        android:dividerHeight="1px"
        android:visibility="visible" >

    </ListView>

    <RelativeLayout
        android:id="@+id/dashidetail_sel"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dashikanfa_header"
        android:background="#60000000"
        android:gravity="center_vertical|center_horizontal"
        android:visibility="visible" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:measureWithLargestChild="false"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/dashijianjie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/btn_aboutjianjie" />

                    <TextView
                        android:id="@+id/header_main_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="大师简介"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/mychuanbo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/btn_myzhuanfa" />

                    <TextView
                        android:id="@+id/txt_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="我的转发"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </LinearLayout>

            </TableRow>
        </TableLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:columnCount="2"
            android:useDefaultMargins="true" >

        </GridLayout>
    </RelativeLayout>

</RelativeLayout>